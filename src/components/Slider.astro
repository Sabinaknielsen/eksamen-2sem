<section>
  <button class="prev-quote">
    <img class="pil" src="./svg/pilop.png" alt="Venstre pil" />
  </button>
  <div class="quote" id="current-quote">
    <img class="billede1" src="./somegallery/gaiamedvask.png" alt="" />
    <div>
      <p class="citat">
        "Fantastisk oplevelse! Jeg føler mig altid velkommen, og Gaia lytter
        virkelig til, hvad jeg ønsker. Resultatet er perfekt hver gang – kan
        varmt anbefale hende!"
      </p>
      <p class="person">Maja Hansen</p>
    </div>
  </div>
  <button class="next-quote">
    <img class="pil" src="./svg/pilned.png" alt="Højre pil" />
  </button>
</section>
<style>
  section {
    position: relative; /* For at placere pilene korrekt i forhold til sektionen */
    display: flex;
    align-items: center;
    justify-content: center; /* Centrerer indholdet i midten af sektionen */
  }

  .pil {
    width: 24px;
    height: 24px;
    cursor: pointer; /* Gør pilene klikbare */
  }

  .quote {
    display: flex;
    flex-direction: row; /* Sørger for billede og tekst er på samme linje */
    align-items: center;
    justify-content: flex-start; /* Justerer indholdet mod venstre */
    max-width: 700px;
    gap: 20px; /* Afstand mellem billede og tekst */
  }

  .billede1 {
    max-width: 150px;

    border-radius: 5px; /* Runde hjørner */
    height: auto;
  }

  .citat {
    font-style: italic;
    max-width: 65ch;
  }

  .person {
    margin-top: 10px;
    font-weight: bold;
    color: #783e19;
    width: 100%;
  }

  /* Placering af pilene */
  .prev-quote,
  .next-quote {
    background: transparent;
    border: none;
    position: absolute;
    top: 50%;
    transform: translateY(-50%); /* Centrerer pilene vertikalt */
    z-index: 10;
  }

  .prev-quote {
    left: 10px; /* Placer pilen til venstre */
  }

  .next-quote {
    right: 10px; /* Placer pilen til højre */
  }
</style>
<script>
  const quotes = [
    {
      text: `  "Fantastisk oplevelse! Jeg føler mig altid velkommen, og Gaia lytter
      virkelig til, hvad jeg ønsker. Resultatet er perfekt hver gang – kan varmt
      anbefale hende!"`,
      person: "Frida Taggatz Ovesen",
    },
    {
      text: `
"Jeg er vild med mit nye look! Gaia formåede virkelig at forstå, hvad jeg ønskede, og resultatet er endnu bedre, end jeg havde håbet på. Stemningen i salonen er så hyggelig, og man føler sig virkelig forkælet. Jeg kommer helt sikkert igen!"`,
      person: "Jeanette Stockel ",
    },
  ];

  let currentIndex = 0;
  const currentQuote = document.getElementById("current-quote");

  function updateQuote(index) {
    const { text, person } = quotes[index];

    // Find og opdater elementerne
    const citatElement = currentQuote.querySelector(".citat");
    const personElement = currentQuote.querySelector(".person");

    citatElement.textContent = text;
    personElement.textContent = person;
  }

  document.querySelector(".prev-quote").addEventListener("click", () => {
    currentIndex = (currentIndex - 1 + quotes.length) % quotes.length;
    updateQuote(currentIndex);
  });

  document.querySelector(".next-quote").addEventListener("click", () => {
    currentIndex = (currentIndex + 1) % quotes.length;
    updateQuote(currentIndex);
  });
</script>
