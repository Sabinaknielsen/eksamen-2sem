---
const { buttontext } = Astro.props;
---
<!--Katinka -->
<!--HUSK MOBILE FIRST! -->
<button class="button" type="button">{buttontext}</button>

<style>
  .button {
    background-color: var(--tertiary);
    padding: 10px 20px;
    border: 3px solid #B05215;
    border-radius: 50px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--primary);
    font-size: 16px;
    font-family: var(--font2);
    width: 200px;
    height: 50px;
    flex-shrink: 0;
  }
  .button:hover {
    background-color: var(--primary);
    color: var(--tertiary);
    border: 3px solid #B05215;
  }
</style>


