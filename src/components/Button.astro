---
const { buttontext } = Astro.props;
const {class: className} = Astro.props;
---
<!--Katinka -->
<!--HUSK MOBILE FIRST! -->

<button class={className} type="button">{buttontext}</button>

<style>
  /*Orange knap*/
  .button_orange {
    background-color: var(--tertiary);
    border: 3px solid #B05215;
    color: var(--primary);
    padding: 10px 20px;
    border-radius: 50px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    font-family: var(--font2);
    width: 200px;
    height: 50px;
    flex-shrink: 0;
  }
  .button_orange:hover {
    background-color: var(--primary);
    color: var(--tertiary);
    border: 3px solid #B05215;
  }
  /*Gr√∏n knap*/
  .button_green {
    background-color: var(--primary);
    border: 3px solid var(--secondary);
    color: var(--secondary);
    padding: 10px 20px;
    border-radius: 50px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 16px;
    font-family: var(--font2);
    width: 200px;
    height: 50px;
    flex-shrink: 0;
  }
  .button_green:hover {
    background-color: var(--secondary);
    color: var(--primary);
    border: 3px solid var(--secondary);
  }
  
</style>


